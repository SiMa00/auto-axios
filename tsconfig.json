{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "packages/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "paths": {
            "@/*": ["./src/*"],
            "@pks/*": ["./packages/*"],
        },
        "removeComments": true,
        "types": [ "vite/client" ]
    },
  
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
